/**
 * Implements hook_boot().
 */
function leadtrekker_boot()
{
    global $_SESSION, $_SERVER;

    if (!session_status()) {
        session_start();
    }

    //Find extra data to attach to leadtrekker submissions
    if ($_SERVER['QUERY_STRING'] != "") {
        _leadtrekker_recognise($_SERVER['QUERY_STRING']);
    }
}

